{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "build/**", ".next/**", "!.next/cache/**"],
      "inputs": ["$TURBO_DEFAULT$", "tsconfig*.json", "vite.config.*", "next.config.*"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "inputs": ["$TURBO_DEFAULT$", "tsconfig*.json", "vite.config.*"]
    },
    "lint": {
      "dependsOn": ["lint:web", "lint:uni"],
      "outputs": [],
      "inputs": ["$TURBO_DEFAULT$", ".eslintrc.*"]
    },
    "lint:web": {
      "outputs": [],
      "inputs": ["src/**", "package.json", "tsconfig*.json", ".eslintrc.*"]
    },
    "lint:uni": {
      "outputs": [],
      "inputs": ["src/**", "package.json", "tsconfig*.json", ".eslintrc.*"]
    },
    "format": {
      "cache": false,
      "outputs": [],
      "inputs": ["$TURBO_DEFAULT$", ".prettierrc*", ".prettierignore"]
    },
    "format:check": {
      "outputs": [],
      "inputs": ["$TURBO_DEFAULT$", ".prettierrc*", ".prettierignore"]
    },
    "check-types": {
      "outputs": [],
      "inputs": ["$TURBO_DEFAULT$", "tsconfig*.json"]
    }
  }
}
